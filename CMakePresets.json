{
  "version": 2,
  "cmakeMinimumRequired": { "major": 3, "minor": 22, "patch": 0 },

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",

        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/out/lib",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/out/lib",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/out/bin",

        "JUCE_BUILD_EXTRAS": "OFF"
      }
    },

    {
      "name": "dbg",
      "displayName": "Debug (Ninja)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },

    {
      "name": "rel",
      "displayName": "Release (Ninja)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "dbg",
      "configurePreset": "dbg"
    },
    {
      "name": "rel",
      "configurePreset": "rel"
    }
  ]
}
